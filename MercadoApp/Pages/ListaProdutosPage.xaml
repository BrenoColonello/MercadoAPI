<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MercadoApp.Models"
             x:Class="MercadoApp.Pages.ListaProdutosPage"
             Title="Estoque em Dia"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*" Padding="16,8">
        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <SearchBar x:Name="SearchBar"
                       Placeholder="Buscar por nome..."
                       TextChanged="OnBuscaChanged"
                       BackgroundColor="#F5F5F5"
                       MinimumHeightRequest="48"/>
            <Button x:Name="BtnAdicionar"
                    Text="+ Adicionar Produto"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    Clicked="OnAdicionarClicked"
                    HeightRequest="52"
                    FontSize="18"/>
        </VerticalStackLayout>

        <RefreshView x:Name="RefreshView" Grid.Row="1" Refreshing="OnRefreshing">
            <CollectionView x:Name="Lista"
                            SelectionMode="None"
                            EmptyView="Nenhum produto cadastrado. Toque em Adicionar Produto."
                            Margin="0,8,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ProdutoDto">
                        <Frame Padding="12" Margin="0,4" BorderColor="#E0E0E0" CornerRadius="8" BackgroundColor="White" HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnItemTapped" CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                                <Image Grid.RowSpan="3" Grid.Column="0" WidthRequest="64" HeightRequest="64"
                                       Source="{Binding FotoProduto, Converter={StaticResource FotoSourceConverter}}"
                                       Aspect="AspectFill" BackgroundColor="#EEEEEE"/>
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding NomeProduto}"
                                       FontSize="18" FontAttributes="Bold"
                                       TextColor="{Binding NivelAlerta, Converter={StaticResource NivelAlertaConverter}}"
                                       LineBreakMode="TailTruncation" MaxLines="2" Margin="12,0,0,0"/>
                                <Label Grid.Column="1" Grid.Row="1" Text="{Binding TextoValidade}"
                                       FontSize="14" TextColor="#666" Margin="12,4,0,0"/>
                                <HorizontalStackLayout Grid.Column="1" Grid.Row="2" Spacing="8" Margin="12,8,0,0">
                                    <Button Text="OK" BackgroundColor="{StaticResource AlertaVerde}" TextColor="White"
                                            HeightRequest="40" Padding="12,0" FontSize="14"
                                            Clicked="OnConferirClicked" CommandParameter="{Binding .}"/>
                                    <Button Text="Editar" BackgroundColor="{StaticResource Gray500}" TextColor="White"
                                            HeightRequest="40" Padding="12,0" FontSize="14"
                                            Clicked="OnEditarClicked" CommandParameter="{Binding .}"/>
                                    <Button Text="Excluir" BackgroundColor="{StaticResource AlertaVermelho}" TextColor="White"
                                            HeightRequest="40" Padding="12,0" FontSize="14"
                                            Clicked="OnExcluirClicked" CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator x:Name="Loading" Grid.RowSpan="2" IsRunning="False" IsVisible="False" Color="{StaticResource Primary}" VerticalOptions="Center" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
