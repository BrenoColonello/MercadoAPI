<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MercadoApp"
             xmlns:conv="clr-namespace:MercadoApp.Converters"
             x:Class="MercadoApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:NivelAlertaToColorConverter x:Key="NivelAlertaConverter"/>
            <conv:Base64ToImageSourceConverter x:Key="FotoSourceConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
