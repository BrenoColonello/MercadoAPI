{
  "expo": {
    "name": "Estoque em Dia",
    "slug": "estoque-em-dia",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mercado.estoqueemdia",
      "infoPlist": {
        "NSCameraUsageDescription": "App precisa da c√¢mera para foto do produto.",
        "NSPhotoLibraryUsageDescription": "App precisa da galeria para escolher foto do produto."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2E7D32"
      },
      "package": "com.mercado.estoqueemdia",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-asset"
    ]
  }
}
